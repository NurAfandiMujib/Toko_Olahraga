@model IEnumerable<Toko_Olahraga.Models.Transaksi>

@{
    ViewData["Title"] = "Index";
}

<h2>Transaksi</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tanggal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Keterangan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdBarangNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPembeliNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tanggal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Keterangan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdBarangNavigation.IdBarang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPembeliNavigation.IdPembeli)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTransaksi">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTransaksi">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTransaksi">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
